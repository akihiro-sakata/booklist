
      <% if current_user.checkmark?(book) %>
  
        <%= form_with(model: current_user.marks.find_by(book_id: book.id), local: true, method: :delete) do |f| %>
        <%= hidden_field_tag :book_id, book.id %>
        <%= f.submit %>
          <i class="fas fa-heart like-btn-unlike"></i>
      <% end %>
      <% else %>
        <%= form_with(model: current_user.marks.build, local: true) do |f| %>
        <%= hidden_field_tag :book_id, book.id %>
        <%= f.submit %>
          <i class="far fa-heart like-btn"></i>
      <% end %>
      <% end %>
