<%= form_with(model: book, local: true) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <li><%= f.label :category, 'カテゴリ：' %><%= f.text_field :category %></li>
  <li><%= f.label :title, 'タイトル：' %><%= f.text_field :title %></li>
  <li><%= f.label :content, '内容　　：' %><%= f.text_field :content%></li>

  <%= f.submit '投稿' %>
<% end %>
